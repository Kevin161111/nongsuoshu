<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">按分类查找你喜欢的内容</p>
            <div class="list-group">
                <% @categories.each do |category| %>
                <%= link_to(category.chs_name, categories_path(category_id: category.id)) %>
                <% end %>
            </div>
        </div>

        <div class="col-md-9">

            <div class="row">
                <% @books.each do |book| %>
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                      <div class="caption">
                          <h4><%= render_book_title(book) %></h4>
                      </div>

                      <div class="book-image-wrapper">

                        <%= render_book_cover(book) %>

                      </div>

                    </div>
                </div>
                <% end %>

            </div>
            <div class="text-center">
                <%= will_paginate @books %>
            </div>

        </div>

    </div>

</div>
<!-- /.container -->
