<%= simple_form_for [:admin, @book] do |f| %>
  <%= f.input :title, :label =>"浓缩书名称" %>
  <%= f.input :author_name %>
  <%= f.input :introduction, :input_html => {:rows => 5} %>
  <%= f.input :content, :label =>"浓缩书内容", :input_html => {:rows => 20} %>

  <%= f.association :category ,:collection => @categories,  :include_blank => "(select if none)",  :label_method => :chs_name,:value_method => :id,:label => "请选择分类" ,input_html: { class: 'edit-input-short-width'}%>
  <%= f.input :cover_image_link %>
  <%= f.input :is_free , :label => "免费" %>
    <%= f.input :is_editor_choice %>
  <% if ["new", "create"].include?(controller.action_name) %>
    <%= f.submit "创建", class: "btn btn-success" %>
  <% else %>
    <%= f.submit "更新", class: "btn btn-success" %>
  <% end %>
<% end %>
