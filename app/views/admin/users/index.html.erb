<div>
  <h2>
  <span>所有用户</span>
  <!-- <span><%#= link_to("待认证用户", admin_users_verify_index_path ) %></span> -->
  </h2>
</div>
<table class="table table-boldered">
  <thead>
    <th>ID</th>
    <th>用户名</th>
    <th>邮箱地址</th>
    <th>
      状态
    </th>
    <th>操作</th>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>
    <td>
      <%= user.user_name %>
    </td>
    <td>
      <%= user.email %>
    </td>
    <td>
      <%= render_user_status(user)  %>
    </td>
    <td>
      <%= link_to("编辑用户信息", edit_admin_user_path(user), :class => "btn btn-sm btn-default") %>
      <% if !user.is_paid %>
        <%= link_to("设为付费会员", promote_admin_user_path(user) , :method => :post, :data => { :confirm => "确定将该用户权限提升为管理员?" },:class => "btn btn-sm btn-default") %>
      <% else %>
        <%= link_to("设为非付费会员", demote_admin_user_path(user) , :method => :post, :data => { :confirm => "确定将该用户权限降为普通用户?" },:class => "btn btn-sm btn-default") %>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
