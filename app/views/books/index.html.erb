<div class="container">

    <div class="col-sm-10 col-sm-offset-1 shell-panel">
        <%= render :partial => "books/free_books" %>
        <%= render :partial => "books/hot_books" %>
        <%= render :partial => "books/latest_books" %>

    </div>

</div>

<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.content %></td>
            <td><%= link_to 'Show', book %></td>
            <!-- <td><%#= link_to 'Edit', edit_book_path(book) %></td>
        <td><%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
        <% end %>
    </tbody>
</table>

