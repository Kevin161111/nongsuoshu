// index banner
.index-banner{
    background: linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35)), url('<%= asset_path("banner.jpg") %>');
    display: block;
    // background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center top;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    border-style: none;
    margin: -20px -15px 0;
    border-radius: 0;
    min-height: 380px;
    position: relative;
    color: #fff;
    letter-spacing: 0.2em;
    .cta-button {
        padding-top: 30px;
        margin: 0 auto;
        width: 200px;
        padding-bottom: 30px;
    }
    .hero-item-wrapper {
        width: 100%;
        min-width: 1200px;
    }
    .course-cost {
        font-size: 40px;
    }
}

.hero-title {
    text-align: center;
    padding-top: 180px;
    padding-left: 30px;
    padding-right: 30px;
    h1 {
        font-size: 32px;
        font-weight: bold;
    }
    p {
        padding-top: 18px;
        font-size: 18px;
    }
}
// index banner
